<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.rostyslavliapkin.spendingbuddy.MainTabController"
      spacing="10" style="-fx-padding: 10;">

    <TitledPane text="Income" VBox.vgrow="ALWAYS" expanded="true">
        <HBox fx:id="incomeContainer" spacing="5" alignment="BASELINE_LEFT" style="-fx-padding: 10;" />
    </TitledPane>

    <TitledPane text="Accounts" VBox.vgrow="ALWAYS" expanded="true">
        <HBox fx:id="accountsContainer" spacing="5" style="-fx-padding: 10;" />
    </TitledPane>

    <TitledPane text="Expenses" VBox.vgrow="ALWAYS" expanded="true">
        <VBox fx:id="expensesContainer" spacing="5" style="-fx-padding: 10;" />
    </TitledPane>

</VBox>
